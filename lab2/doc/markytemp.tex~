Marky dice que lo hagamos as√≠, a ver si les gusta beibis

module cajitasMUL{

input wire wA,wB;
output reg [7:0] out;
reg C1,C2,C3
reg Temp1,Temp2

always @(*)

	/R0
	out[0] = wA[0]&wB[0];
	//R1
	{C1,out[1]} = (wA[0] & wB[1]) + (wA[1] & wB[0]);
	//R2
	{C1,Temp1[0]} = (wA[2] & wB[0]) + (wA[1] & wB[1])+ C1;
	{C2,out[2]} = (wA[0] & wB[2]) + Temp1[0];
	//R3
	{C1,Temp1[1]} = (A[3]&B[0]) + (A[2]&B[1]) + C1;
	{rC2 ,  rT2 [ 0 ] } = (A[ 1 ] & B[ 2 ] ) + rT1 [ 1 ] + rC2 ;
	{rC3 ,  out [ 3 ] } = (A[ 0 ] & B[ 3 ] ) + rT2 [ 0 ] ;
	//R4
	{rC1 ,  rT1 [ 2 ] } = (A[ 3 ] & B[ 1 ] ) + rC1 ;
	{rC2 ,  rT2 [ 1 ] } = (A[ 2 ] & B[ 2 ] ) + rT1 [ 2 ] + rC2 ;
	{rC3 ,  out [ 4 ] } = (A[ 1 ] & B[ 3 ] ) + rT2 [ 1 ] + rC3 ;
	//R5
	{rC2 ,  rT2 [ 2 ] } = (A[ 3 ] & B[ 2 ] ) + rC2 + rC1 ;
	{rC3 ,  out [ 5 ] } = (A[ 2 ] & B[ 3 ] ) + rT2 [ 2 ] + rC3 ;
	//R6 y R7.
	{out [ 7 ] ,  out [ 6 ] } = (A[ 3 ] & B[ 3 ] ) + rC2 + rC3 

	}
\end{end}
